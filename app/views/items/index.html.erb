<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Event</th>
      <th>Weather</th>
      <th>Transportation</th>
      <th>International</th>
      <th>Redeye</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category_id %></td>
        <td><%= item.event_id %></td>
        <td><%= item.weather_id %></td>
        <td><%= item.transportation_id %></td>
        <td><%= item.international %></td>
        <td><%= item.redeye %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

