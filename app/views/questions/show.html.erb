<div class="container-fluid">
<h1> Question <%= @question.position %> </h1>

<p><%= @question.question %></p>


<% if @question.id == 1 %>
    <%= button_to('International', { controller: answers_path, text: 'international = true', id: @question.id }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
    <%= button_to('Domestic', { controller: answers_path, text: 'domestic = true' }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
<% elsif @question.id == 5 %>
    <%= button_to('0-3 days', { controller: answers_path, text: '0-3 days', id: @question.id }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
    <%= button_to('4-7 days', { controller: answers_path, text: '4-7 days', id: @question.id }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
    <%= button_to('8-14 days', { controller: answers_path, text: '8-14 days', id: @question.id }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
      <p>
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          14+ days
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <h6 class="dropdown-header">Is there a washer/dryer?</h6>
          <%= button_to('Yes', { controller: answers_path, text: 'Washer/Dryer', id: @question.id }, class: 'dropdown-item')  %>
          <%= button_to('No', { controller: answers_path, text: 'No Washer/Dryer', id: @question.id }, class: 'dropdown-item')  %>
        </div>
      </div>
      </p>
<% else %>
  <% unless @choices.nil? %>
    <% @choices.each do |choice| %>
      <% if choice["#{@table_name}"] == 'Airplane' %>
        <p>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Airplane
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <h6 class="dropdown-header">What type of flight?</h6>
            <%= button_to("Normal", {controller: answers_path, :text => "(#{@table_name}_id = " + (@table.find_by(@table_name.to_s => choice["#{@table_name}"]).id.to_s) + "AND normal = true)", id: @question.id}, class: 'dropdown-item') %>
            <%= button_to("Over 5 Hours / Redeye", {controller: answers_path, :text => "#{@table_name}_id = " + @table.find_by(@table_name.to_s => choice["#{@table_name}"]).id.to_s, id: @question.id}, class: 'dropdown-item') %>
          </div>
        </div>
        </p>
      <% else %>
        <%= button_to(choice["#{@table_name}"], { controller: answers_path, text: "#{@table_name}_id = " + @table.find_by(@table_name.to_s => choice["#{@table_name}"]).id.to_s, id: @question.id }, class: 'btn btn-primary', form_class: 'row-fluid form-group') %>
      <% end %>
    <%end %>
  <% end %>
<% end %>


<%= link_to("Previous", @question.previous) if @question.previous %>
<%= link_to("Next", @question.next) if @question.next %>
<%= link_to("Finish", :controller => :answers, :action => :index) if @question.next.nil? %>
</div>